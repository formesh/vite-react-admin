# 开发环境配置
NODE_ENV=development

# 开发服务器端口
VITE_PORT=3000

# 开发服务器主机
VITE_HOST=localhost

# API 基础地址（后端服务器地址）
VITE_API_BASE_URL=http://localhost:8080

# WebSocket 基础地址
VITE_WS_BASE_URL=ws://localhost:8080

# 第三方 API 地址
VITE_THIRD_PARTY_API=https://api.example.com

# 是否启用开发工具
VITE_ENABLE_DEVTOOLS=true

# 是否启用热重载
VITE_ENABLE_HMR=true

# 是否启用 Mock 数据
VITE_ENABLE_MOCK=true

# 日志级别 (debug, info, warn, error)
VITE_LOG_LEVEL=debug

# 是否显示性能监控
VITE_ENABLE_PERFORMANCE=true

# 是否启用 Source Map
VITE_ENABLE_SOURCEMAP=true

# 开发环境标识
VITE_APP_ENV=development

# API 超时时间 (毫秒)
VITE_API_TIMEOUT=10000

# 是否启用代理日志
VITE_ENABLE_PROXY_LOG=true

VITE_SYSTEM_NAME="GGBOND"